<h1>Prijava</h1>
<div class="container">
   <section class="register">
<form>
    <div class="form-group">
      <label for="exampleInputUsername1">Username: </label>
      {{input type="username" placeholder="korisnicko ime" class="form-control" id="exampleInputUsername1" value=model.email}}

    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password : </label>
      {{input type="password" class="form-control" id="exampleInputPassword1" placeholder="sifra" value=model.password}}

    </div>
    <br>
    <button type="submit" class="btn btn-primary" {{action 'login'}}>Login</button>
    <h4 style="color:red">{{errorMessage}}</h4>
  </form>
</section>
</div>
