<h1>Login</h1>

<form>
    <div class="form-group">
      <label for="exampleInputUsername1">Email</label>
      {{input type="email" placeholder="Email" class="form-control" id="exampleInputUsername1" value=model.email}}

    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      {{input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value=model.password}}

    </div>
    <br>
    <button type="submit" class="btn btn-primary" {{action 'login'}}>Submit</button>
    <h4 style="color:red">{{errorMessage}}</h4>
  </form>
