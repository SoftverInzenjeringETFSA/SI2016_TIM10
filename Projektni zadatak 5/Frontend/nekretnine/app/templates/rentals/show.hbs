
{{log model.rental}}

<div class="jumbo">

  <h2>{{model.rental.nazivOglasa}}</h2>
  {{#if session.isAuthenticated}}

    <div class="detail owner">
      <span>Owner:</span> {{#link-to 'accounts.show' model.rental.korisnik.id}}{{model.rental.korisnik.ime}} {{/link-to}}
    </div>
{{/if}}
    <div class="detail type">
      <span>Type:</span> {{model.rental.vrstaOglasa}}
    </div>
    <div class="detail location">
      <span>Squares:</span> {{model.rental.kvadratura}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{model.rental.brojProstorija}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{model.rental.grad}}, {{model.rental.adresa}}
    </div>
    <div class="detail location">
      <span>Price:</span> {{model.rental.cijena}} BAM
    </div>
    <br>
    {{#if session.isAuthenticated}}
    {{#if (is-equal model.rental.korisnik.id session.data.authenticated.korisnik.id)}}
    <button  class="btn btn-primary" {{action 'delete'}}>Obrisi oglas</button>
    {{/if}}
    {{/if}}

   </div>
